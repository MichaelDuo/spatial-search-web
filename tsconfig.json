{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": false,
		"esModuleInterop": true,
		"lib": ["dom", "es2017"],
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"],
			"@tests/*": ["tests/*"]
		}
	},
	"exclude": ["node_modules", "dist", "public", "config"]
}
